@model IEnumerable<Idea_Management.Models.Ideas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Deadline1</th>
            <th>Deadline2</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Deadline1)</td>
                <td>@Html.DisplayFor(modelItem => item.Deadline2)</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination justify-content-center">

    @if (ViewBag.Page > 1)
    {
        @Html.ActionLink("<< ", "Index", new { page = 1 })
        @Html.Raw(" ");
        @Html.ActionLink(" < Prev", "Index", new { page = ViewBag.Page - 1 })
    }
    Page @(ViewBag.Page) of @(ViewBag.NoOfPage)
    @if (ViewBag.Page < ViewBag.NoOfPage)
    {
        @Html.ActionLink("Next > ", "Index", new { page = ViewBag.Page + 1 })
        @Html.Raw(" ");
        @Html.ActionLink(" >>", "Index", new { page = ViewBag.NoOfPage })
    }
</div>